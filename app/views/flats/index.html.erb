<div class="container mb-3">
  <div class="justify-content-end mb-3">
    <h1>Flats</h1>
  </div>

   <div class="cards">
    <% @flats.each do |flat| %>
    <div class="card-body">
      <img class = "flat-card-image" src="https://images.unsplash.com/photo-1469022563428-aa04fef9f5a2?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1953&q=80" alt="apartment">
      <p><%= flat.name %></p>
      <p><%= flat.address %></p>
      <p><%= flat.description %></p>
      <p>Rates: $<%= flat.price_per_night %></p>
      <p>Price: <%= flat.number_of_guests %></p>
      <div class="row justify-content-between">
        <p><%= link_to "More info", flat_path(flat)%></p>
        <p><%= link_to "Edit", flat_path(flat)%></p>
        <p><%= link_to "Delete", flat_path(flat)%></p>
      </div>
    </div>
  <% end %>
  </div>
</div>


